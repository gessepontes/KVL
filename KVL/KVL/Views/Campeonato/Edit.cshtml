@model KVL.Models.Campeonato

@{
    ViewBag.Title = "Editar Campeonato";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="content-header">
        <h1>
            Editar Campeonato
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Campeonato</a></li>
            <li class="active">Campeonato</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Campeonato</h3>
                        <hr />
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.IDCampeonato)

                            <div class="form-group">
                                @Html.LabelFor(model => model.sNome, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.sNome, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.sNome, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.iTipoCampeonato, "Tipo de Campeonato", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EnumDropDownListFor(model => model.iTipoCampeonato, "Selecione o Perfil", htmlAttributes: new { @class = "form-control", style = "width:300px" })
                                    @Html.ValidationMessageFor(model => model.iTipoCampeonato, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.iCodCampo, "Campo", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("iCodCampo", null, "Selecione o Campo", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.iCodCampo, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.dDataInicio, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.dDataInicio, new { htmlAttributes = new { @class = "form-control", style = "width:150px" } })
                                    @Html.ValidationMessageFor(model => model.dDataInicio, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.dDataFim, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.dDataFim, new { htmlAttributes = new { @class = "form-control", style = "width:150px" } })
                                    @Html.ValidationMessageFor(model => model.dDataFim, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.iQuantidadeTimes, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.iQuantidadeTimes, new { htmlAttributes = new { @class = "form-control", style = "width:100px" } })
                                    @Html.ValidationMessageFor(model => model.iQuantidadeTimes, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.bPreInscricao, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.bPreInscricao)
                                        @Html.ValidationMessageFor(model => model.bPreInscricao, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.bIdaVolta, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.bIdaVolta)
                                        @Html.ValidationMessageFor(model => model.bIdaVolta, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="box-footer">
                                <input type="submit" value="Salvar" class="btn btn-primary" />
                                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Campeonato")'">Voltar</button>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
}
