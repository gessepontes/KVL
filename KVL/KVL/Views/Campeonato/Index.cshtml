@using PagedList.Mvc;
@model PagedList.IPagedList<KVL.Models.Campeonato>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="">Campeonato</a>
                </li>
                <li class="active">
                    <i class="fa fa-table"></i> Campeonato
                </li>
            </ol>            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <p>
                        <a href="@Url.Action("Create", "Campeonato")">
                            Novo Campeonato
                        </a>
                    </p>

                    @using (Html.BeginForm("Index", "Campeonato", FormMethod.Post))
                    {
                        <div class="form-group">
                            <input type="text" class="form-control" name="SearchString" id="SearchString">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Pesquisar" class="btn btn-default" />
                        </div>
                    }
                    <hr />
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.ActionLink("Nome", "Index", new { sortOrder = ViewBag.NomeParam })
                                </th>
                                <th>
                                    Tipo de Campeonato
                                </th>
                                <th>
                                    Campo
                                </th>
                                <th>
                                    @Html.ActionLink("Data inicio", "Index", new { sortOrder = ViewBag.DtInicioParam })
                                </th>
                                <th>
                                    Data Fim
                                </th>
                                <td>
                                    Ida e Volta
                                </td>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sNome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.iTipoCampeonato)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Campo.sNome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dDataInicio)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dDataFim)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.bIdaVolta)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Campeonato",new { id = item.IDCampeonato })">
                                            <img src="~/Imagens/table_icon/table_icon_edit.png" />
                                        </a>

                                        <a href="@Url.Action("Details", "Campeonato",new { id = item.IDCampeonato })">
                                            <img src="~/Imagens/table_icon/table_icon_search.png" />
                                        </a>

                                        <a href="@Url.Action("Delete", "Campeonato",new { id = item.IDCampeonato })">
                                            <img src="~/Imagens/table_icon/table_icon_trash.png" />
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
