@model KVL.Models.CampeonatoGrupo

@{
    ViewBag.Title = "Editar Grupo";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="content-header">
        <h1>
            Editar Partida
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Campeonato</a></li>
            <li class="active">Grupo Campeonato</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Partida</h3>
                        <hr />
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.IDCampeonatoGrupo)

                            <div class="form-group">
                                @Html.LabelFor(model => model.IDInscrito, "Time", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IDInscrito", null, "Selecione o time", htmlAttributes: new { @class = "form-control", style = "width:200px", @disabled = "disabled" })
                                    @Html.ValidationMessageFor(model => model.IDInscrito, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IDGrupo, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EnumDropDownListFor(model => model.IDGrupo, htmlAttributes: new { @class = "form-control", style = "width:200px" })
                                    @Html.ValidationMessageFor(model => model.IDGrupo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="box-footer">
                                <input type="submit" value="Salvar" class="btn btn-primary" />
                                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index", "CampeonatoGrupo")'">Voltar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
