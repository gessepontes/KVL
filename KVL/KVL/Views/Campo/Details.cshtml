@model KVL.Models.Campo

@{
    ViewBag.Title = "Detalhes do Campo";
}

<section class="content-header">
    <h1>
        Detalhes do jogador
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Cadastro</a></li>
        <li class="active">Jogador</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Jogador</h3>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.sNome)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.sNome)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.sEndereco)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.sEndereco)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.mValor)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.mValor)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.mValorMensal)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.mValorMensal)
                        </dd>

                    </dl>
                </div>

                <div class="box-footer">
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Campo", new { id = Model.IDCampo })'">Editar</button>
                    <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Campo")'">Voltar</button>
                </div>

                <div id="map_canvas" style="height: 400px;" ></div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyCsx0MazW1I1xHi2thuGArLDamMwj2tHiI&sensor=false"></script>
<script src="~/Scripts/maps.js"></script>

@section scripts {
    <section class="scripts">

        <script type="text/javascript">
            $(document).ready(function () {
                chamaMapa();
                chamaMarcacaoComTextoInfo('@Html.DisplayFor(model => model.sEndereco)', '@Html.DisplayFor(model => model.sNome)');
            });
        </script>
    </section>
}
