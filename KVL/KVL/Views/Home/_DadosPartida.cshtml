@model KVL.Models.Partida

<section class="content">
    <div class="row">
        <!-- left column -->
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Dados da Partida</h3>
                    <div class="form-horizontal">
                        <div class="control-label col-md-12">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Campo</th>
                                        <th colspan="3">@Model.sCampo</th>
                                    </tr>
                                    <tr>
                                        <th>Data da Partida</th>
                                        <th colspan="3">@Model.dDataPartida.ToString().Substring(0, 10)</th>
                                    </tr>
                                    <tr>
                                        <th>
                                            Time 1
                                        </th>
                                        <th>Gol</th>
                                        <th>
                                            Gol
                                        </th>
                                        <th>Time 2</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <th>
                                            <img width="100" height="100" src="@string.Format("../../imagens/simbolo/" + Model.sSimbolo1, Model.sSimbolo1)" alt="Model.sSimbolo1">
                                        </th>
                                        <th>@Model.iQntGols1</th>
                                        <th>@Model.iQntGols2</th>
                                        <th>
                                            <img width="100" height="100" src="@string.Format("../../imagens/simbolo/" + Model.sSimbolo2, Model.sSimbolo2)" alt="Model.sSimbolo2">
                                        </th>
                                    </tr>
                                    <tr>
                                        <th colspan="2" align="center">@Model.sTime1</th>
                                        <th colspan="2" align="center">@Model.sTime2</th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
