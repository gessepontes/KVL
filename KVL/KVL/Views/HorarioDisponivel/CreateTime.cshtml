@model KVL.Models.HorarioDisponivel

@{
    ViewBag.Title = "Novo Horário";
}

<section class="content-header">
    <h1>
        Novo Horário Disponivel
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Cadastro</a></li>
        <li class="active">Horário</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Horário</h3>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.Label("Campo", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("iCodCampo", null, "Selecione o campo", htmlAttributes: new { @class = "form-control", style = "width:300px" })
                                    @Html.ValidationMessageFor(model => model.iCodCampo, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Time", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("iCodTime", null, htmlAttributes: new { @class = "form-control", style = "width:300px" })
                                    @Html.ValidationMessageFor(model => model.iCodTime, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.iDiaSemana, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EnumDropDownListFor(model => model.iDiaSemana, "Selecione o dia da semana", htmlAttributes: new { @class = "form-control", style = "width:300px" })
                                    @Html.ValidationMessageFor(model => model.iDiaSemana, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.Label("Hora", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.sHora, new { htmlAttributes = new { @class = "form-control", style = "width:150px" } })
                                    @Html.ValidationMessageFor(model => model.sHora, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Salvar" class="btn btn-primary" />
                                    <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("PerfilTime", "Time")'">Voltar</button>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script type="text/javascript">
        $(function () {
            $('#sHora').datetimepicker({
                format: 'HH:mm',
                showClose: false,
                showClear: false,
                toolbarPlacement: 'top',
                stepping: 15
            });
        });
    </script>
}


