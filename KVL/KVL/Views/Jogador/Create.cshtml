@model KVL.Models.Jogador

@{
    ViewBag.Title = "Novo Jogador";
}

<section class="content-header">
    <h1>
        Novo Jogador
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Cadastro</a></li>
        <li class="active">Jogador</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Time</h3>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.IDPessoa, "Pessoa", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IDPessoa", null, "Selecione a pessoa", htmlAttributes: new { @class = "form-control", style = "width:200px" })
                                    @Html.ValidationMessageFor(model => model.IDPessoa, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IDPosicao, "Posição", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IDPosicao", null, "Selecione a posição", htmlAttributes: new { @class = "form-control", style = "width:300px" })
                                    @Html.ValidationMessageFor(model => model.IDPosicao, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IDTime, "Time", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IDTime", null, "Selecione o time", htmlAttributes: new { @class = "form-control", style = "width:200px" })
                                    @Html.ValidationMessageFor(model => model.IDTime, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="box-footer">
                                <input type="submit" value="Salvar" class="btn btn-primary" />
                                <button type="button" class="btn btn-default"  onclick="location.href='@Url.Action("Index", "Jogador")'">Voltar</button>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
