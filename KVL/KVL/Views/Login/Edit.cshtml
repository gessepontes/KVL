@model KVL.Models.Login

@{
    ViewBag.Title = "Editar Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="content-header">
        <h1>
            Editar Login
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Acesso</a></li>
            <li class="active">Login</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Login</h3>
                        <hr />

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.IDLogin)

                            <div class="form-group">
                                @Html.LabelFor(model => model.IDPessoa, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IDPessoa", null, "Selecione a pessoa", htmlAttributes: new { @class = "form-control", style = "width:300px" })
                                    @Html.ValidationMessageFor(model => model.IDPessoa, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IDPerfil, "Perfil", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EnumDropDownListFor(model => model.IDPerfil, "Selecione o Perfil", htmlAttributes: new { @class = "form-control", style = "width:300px" })
                                    @Html.ValidationMessageFor(model => model.IDPerfil, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.sLogin, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.sLogin, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.sLogin, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.bConfimacao, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.bConfimacao)
                                        @Html.ValidationMessageFor(model => model.bConfimacao, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.bAtivo, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.bAtivo)
                                        @Html.ValidationMessageFor(model => model.bAtivo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="box-footer">
                                <input type="submit" value="Salvar" class="btn btn-primary" />
                                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Login")'">Voltar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
    </section>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
