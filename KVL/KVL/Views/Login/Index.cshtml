@using PagedList.Mvc;
@model PagedList.IPagedList<KVL.Models.Login>

@{
    ViewBag.Title = "Pesquisar Login";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="">Acesso</a>
                </li>
                <li class="active">
                    <i class="fa fa-table"></i> Login
                </li>
            </ol>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <p>
                        <a href="@Url.Action("Create", "Login")">
                            Novo Login
                        </a>
                    </p>

                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                    {
                        <div class="form-group">
                            <input type="text" class="form-control" name="SearchString" id="SearchString">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Pesquisar" class="btn btn-default" />
                        </div>
                    }
                    <hr />
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.ActionLink("Nome", "Index", new { sortOrder = ViewBag.NomeParam })
                                </th>
                                <th>
                                    Perfil
                                </th>
                                <th>
                                    Login
                                </th>
                                <th>
                                    Confirmação
                                </th>
                                <th>
                                    Ativo
                                </th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pessoa.sNome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IDPerfil)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sLogin)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.bConfimacao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.bAtivo)
                                    </td>

                                    <td>
                                        <a href="@Url.Action("Edit", "Login",new { id = item.IDLogin })">
                                            <img src="~/Imagens/table_icon/table_icon_edit.png" />
                                        </a>

                                        <a href="@Url.Action("Details", "Login",new { id = item.IDLogin })">
                                            <img src="~/Imagens/table_icon/table_icon_search.png" />
                                        </a>
                                        <a href="@Url.Action("Delete", "Login",new { id = item.IDLogin })">
                                            <img src="~/Imagens/table_icon/table_icon_trash.png" />
                                        </a>
                                    </td>
                                    <td>
                                        @using (Html.BeginForm("ConfirmacaoSolicitacao", "Login", FormMethod.Post, new { id = "formEmail" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("email", item.Pessoa.sEmail)
                                            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-send"></span>  E-mail de Confirmação</button>                                         
                                        }

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>