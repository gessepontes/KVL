@using KVL.Models
@model AcessoViewModel
@{
    ViewBag.Title = "Acesso do Usuário";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}

@using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Admin</b>KVL</a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Login para iniciar a sua sessão</p>
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control", placeholder = "Login" })
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Senha" })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </label>
                    </div>
                </div><!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Login</button>
                </div><!-- /.col -->
            </div>
            <a href="@Url.Action("ForgotPassword", "Login")">Esqueceu a senha?</a>
        </div>
        <div>
            @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
