@model KVL.Models.Pagamento

@{
    ViewBag.Title = "Excluir Pagamento";
}

<section class="content-header">
    <h1>
        Você deseja excluir este pagamento
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Acesso</a></li>
        <li class="active">Pagamento</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Pagamento</h3>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Login.sLogin)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Login.sLogin)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.dDataInicio)
                        </dt>

                        <dd>
                            @Html.ValueFor(model => model.dDataInicio, "{0:dd/MM/yyyy}")
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.iQuantidadeMes)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.iQuantidadeMes)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.mValorPago)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.mValorPago)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.mValorReal)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.mValorReal)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="box-footer">
                            <input type="submit" value="Excluir" class="btn btn-primary" />
                            <button type="button" class="btn btn-default" data-dismiss="modal" onclick="location.href='@Url.Action("Index", "Pagamento")'">Voltar</button>
                        </div>
                    }
                </div>
            </div>
</div>
        </div>
</section>