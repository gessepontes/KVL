@model KVL.Models.Pagamento

@{
    ViewBag.Title = "Editar Pagamento";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="content-header">
        <h1>
            Editar Pagamento
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Acesso</a></li>
            <li class="active">Pagameto</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Pagamento</h3>
                        <hr />
                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.IDPagamento)

                            <div class="form-group">
                                @Html.LabelFor(model => model.IDLogin, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IDLogin", null, "Selecione o login", htmlAttributes: new { @class = "form-control", style = "width:300px" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.iQuantidadeMes, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.iQuantidadeMes, new { htmlAttributes = new { @class = "form-control ", style = "width:100px" } })
                                    @Html.ValidationMessageFor(model => model.iQuantidadeMes, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.dDataInicio, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.dDataInicio, new { htmlAttributes = new { @class = "form-control ", style = "width:300px" } })
                                    @Html.ValidationMessageFor(model => model.dDataInicio, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.mValorPago, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.mValorPago, new { htmlAttributes = new { @class = "form-control", style = "width:100px" } })
                                    @Html.ValidationMessageFor(model => model.mValorPago, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.mValorReal, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.mValorReal, new { htmlAttributes = new { @class = "form-control", style = "width:100px" } })
                                    @Html.ValidationMessageFor(model => model.mValorReal, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="box-footer">
                                <input type="submit" value="Salvar" class="btn btn-primary" />
                                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Pagamento")'">Voltar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/validations_pt-br")
}
