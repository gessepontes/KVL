@model KVL.Models.PartidaAmistosa

@{
    ViewBag.Title = "Editar Partida";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="content-header">
        <h1>
            Editar Partida
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Cadastro</a></li>
            <li class="active">Partida</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Partida</h3>
                        <hr />
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.IDPartidaAmistosa)

                            <div class="form-group">
                                @Html.LabelFor(model => model.iCodCampo, "Campo", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("iCodCampo", null, "Selecione o Campo", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.iCodCampo, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IDTime1, "IDTime1", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IDTime1", null, "Selecione o time", htmlAttributes: new { @class = "form-control", style = "width:200px" })
                                    @Html.ValidationMessageFor(model => model.IDTime1, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IDTime2, "IDTime2", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IDTime2", null, "Selecione o time", htmlAttributes: new { @class = "form-control", style = "width:200px" })
                                    @Html.ValidationMessageFor(model => model.IDTime2, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.iQntGols1, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.iQntGols1, new { htmlAttributes = new { @class = "form-control", style = "width:70px" } })
                                    @Html.ValidationMessageFor(model => model.iQntGols1, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.iQntGols2, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.iQntGols2, new { htmlAttributes = new { @class = "form-control", style = "width:70px" } })
                                    @Html.ValidationMessageFor(model => model.iQntGols2, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.dDataPartida, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.dDataPartida, new { htmlAttributes = new { @class = "form-control", style = "width:200px" } })
                                    @Html.ValidationMessageFor(model => model.dDataPartida, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.sHoraPartida, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.sHoraPartida, new { htmlAttributes = new { @class = "form-control", style = "width:100px" } })
                                    @Html.ValidationMessageFor(model => model.sHoraPartida, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            
                            <div class="box-footer">
                                <input type="submit" value="Salvar" class="btn btn-primary" />
                                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index", "PartidaAmistosa")'">Voltar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

@section scripts {
    <script type="text/javascript">
        $(function () {
            $('#sHoraPartida').datetimepicker({
                format: 'HH:mm',
                showClose: false,
                showClear: false,
                toolbarPlacement: 'top',
                stepping: 15
            });
        });
    </script>
}
