@model KVL.Models.PartidaCampeonato

@{
    ViewBag.Title = "Excluir Partida";
}

<section class="content-header">
    <h1>
        Você deseja excluir esta Partida
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Campeonato</a></li>
        <li class="active">Partida</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Partida</h3>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            Campeonato
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Inscrito.PreInscrito.Campeonato.sNome)
                        </dd>
                        <dt>
                            Rodada
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.iRodada)
                        </dd>
                        <dt>
                            Time 1
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Inscrito.PreInscrito.Time.sNome)
                        </dd>

                        <dt>
                            Time 2
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Inscrito1.PreInscrito.Time.sNome)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.iQntGols1)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.iQntGols1)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.iQntGols2)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.iQntGols2)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.dDataPartida)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.dDataPartida)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.sHoraPartida)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.sHoraPartida)
                        </dd>
                    </dl>


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="box-footer">
                            <input type="submit" value="Excluir" class="btn btn-primary" />
                            <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index", "PartidaCampeonato")'">Voltar</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>