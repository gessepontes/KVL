@model KVL.Models.Pessoa

@{
    ViewBag.Title = "Nova Pessoa";
}

<section class="content-header">
    <h1>
        Nova Pessoa
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Cadastro</a></li>
        <li class="active">Pessoa</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Pessoa</h3>

                    @using (Html.BeginForm("Create", "Pessoa", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.sNome, htmlAttributes: new { @class = "control-label col-md-2" })

                                @Html.EditorFor(model => model.sNome, new { htmlAttributes = new { @class = "form-control", style = "width:300px" } })
                                @Html.ValidationMessageFor(model => model.sNome, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.sEmail, htmlAttributes: new { @class = "control-label col-md-2" })

                                @Html.EditorFor(model => model.sEmail, new { htmlAttributes = new { @class = "form-control", style = "width:300px" } })
                                @Html.ValidationMessageFor(model => model.sEmail, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.dDataNascimento, htmlAttributes: new { @class = "control-label col-md-2" })

                                @Html.EditorFor(model => model.dDataNascimento, new { htmlAttributes = new { @class = "form-control", style = "width:200px" } })
                                @Html.ValidationMessageFor(model => model.dDataNascimento, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.sTelefone, htmlAttributes: new { @class = "control-label col-md-2" })

                                @Html.EditorFor(model => model.sTelefone, new { htmlAttributes = new { @class = "form-control", style = "width:150px", mask = "(99) 9999-9999" } })
                                @Html.ValidationMessageFor(model => model.sTelefone, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.sCpf, htmlAttributes: new { @class = "control-label col-md-2" })

                                @Html.EditorFor(model => model.sCpf, new { htmlAttributes = new { @class = "form-control", style = "width:150px", mask = "999.999.999-99" } })
                                @Html.ValidationMessageFor(model => model.sCpf, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.sRg, htmlAttributes: new { @class = "control-label col-md-2" })

                                @Html.EditorFor(model => model.sRg, new { htmlAttributes = new { @class = "form-control", style = "width:150px", mask = "999999999" } })
                                @Html.ValidationMessageFor(model => model.sRg, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.sFoto, htmlAttributes: new { @class = "control-label col-md-2" })
                                <input type="file" id="Avatar" name="upload" />
                                @Html.ValidationMessageFor(model => model.sFoto)
                            </div>

                            <div class="box-footer">
                                    <input type="submit" value="Salvar" class="btn btn-primary" />
                                    <button type="button" class="btn btn-default" data-dismiss="modal" onclick="location.href='@Url.Action("Index", "Pessoa")'">Voltar</button>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
    </section>
                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                        @Scripts.Render("~/bundles/jquerymask")
                    }
