@model KVL.Models.Pessoa

@{
    ViewBag.Title = "Detalhes da Pessoa";
}

<section class="content-header">
    <h1>
        Detalhes da Pessoa
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Cadastro</a></li>
        <li class="active">Pessoa</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Pessoa</h3>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.sNome)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.sNome)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.sTelefone)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.sTelefone)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.sCpf)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.sCpf)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.sRg)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.sRg)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.sEmail)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.sEmail)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.dDataNascimento)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.dDataNascimento)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.sFoto)
                        </dt>
                        <dd>
                            <img src="@string.Format("../../imagens/foto/" + @Model.sFoto,@Model.sFoto)" alt="@Model.sFoto" width="100" height="100"  class="img-circle" />
                        </dd>

                    </dl>
                </div>

                <div class="box-footer">
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Pessoa", new { id = Model.IDPessoa })'">Editar</button>
                    <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Pessoa")'">Voltar</button>
                </div>
            </div>
        </div>
    </div>
</section>