@model KVL.Models.PreInscrito

@{
    ViewBag.Title = "Novo Pré-Inscrito";
}


<section class="content-header">
    <h1>
        Novo Pré-Inscrito
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Campeonato</a></li>
        <li class="active">Pré-Inscrito</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Pré-Inscrito</h3>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.IDTime, "Time", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IDTime", null,  htmlAttributes: new { @class = "form-control", style = "width:200px" })
                                    @Html.ValidationMessageFor(model => model.IDTime, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IDCampeonato, "Campeonato", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IDCampeonato", null, "Selecione o campeonato", htmlAttributes: new { @class = "form-control", style = "width:200px" })
                                    @Html.ValidationMessageFor(model => model.IDCampeonato, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="box-footer">
                                <input type="submit" value="Salvar" class="btn btn-primary" />
                                <button type="button" class="btn btn-default"  onclick="location.href='@Url.Action("IndexTime", "PreInscrito")'">Voltar</button>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
