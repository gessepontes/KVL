@model IEnumerable<KVL.Models.PreInscrito>


@{
    ViewBag.Title = "Times Pré-Inscritos";
}


<section class="content-header">
    <h1>
        Times pré-inscritos
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Campeonato</a></li>
        <li class="active">Pré-Inscrito</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Pré-Inscrito</h3>
                    <hr />
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Time
                                </th>
                                <th>
                                    Responsável
                                </th>
                                <th style="width:3%"></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Time.sNome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Time.Pessoa.sNome)
                                    </td>
                                    <td>
                                        @using (Html.BeginForm())
                                        {
                                            @Html.AntiForgeryToken()

                                            <div class="form-actions no-color">
                                                <a href="@Url.Action("Delete", "Preinscrito",new { id = item.IDPreInscrito })">
                                                    <img src="~/Imagens/table_icon/table_icon_trash.png" />
                                                </a>
                                            </div>
                                        }

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
                <div class="box-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" onclick="location.href='@Url.Action("Index", "PreInscrito")'">Voltar</button>
                </div>

            </div>
        </div>
    </div>
</section>
