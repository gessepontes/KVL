            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                @RenderBody()
                @{Html.RenderPartial("_Mensagem");}
            </section><!-- /.content -->
