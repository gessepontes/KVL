                                    <div class="pull-left">
                                        <a href="@Url.Action("PerfilTime", "Time")" class="btn btn-default btn-flat">Pefil</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="@Url.Action("logout", "Login")" class="btn btn-default btn-flat">Sair</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

