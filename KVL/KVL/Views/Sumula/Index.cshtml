@using PagedList.Mvc;
@model PagedList.IPagedList<KVL.Models.Sumula>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="">Súmulas</a>
                </li>
            </ol>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    @using (Html.BeginForm("Index", "Sumula", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.DropDownList("IDCampeonato",
                  new SelectList(ViewBag.ListaCampeonato, "IDCampeonato", "sNome"),
                  "Selecione o Campeonato",
                  new { @class = "form-control", style = "width:200px" })
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Pesquisar" class="btn btn-default" />
                        </div>
                    }
                    <hr />
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.ActionLink("Time 1", "Index", new { sortOrder = ViewBag.NomeParam })
                                </th>
                                <th>
                                    Gol
                                </th>
                                <th>
                                    Gol
                                </th>
                                <th>
                                    Time 2
                                </th>
                                <th>
                                    @Html.ActionLink("Data", "Index", new { sortOrder = ViewBag.DataParm })
                                </th>
                                <th>
                                    @Html.ActionLink("Campeonato", "Index", new { sortOrder = ViewBag.CampeonatoParm })
                                </th>
                                <th>
                                    Rodada
                                </th>
                                <th width="3%"></th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PartidaCampeonato.Inscrito.PreInscrito.Time.sNome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PartidaCampeonato.iQntGols1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PartidaCampeonato.iQntGols2)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PartidaCampeonato.Inscrito1.PreInscrito.Time.sNome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PartidaCampeonato.dDataPartida)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PartidaCampeonato.Inscrito.PreInscrito.Campeonato.sNome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PartidaCampeonato.iRodada)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Create", "Sumula",new { id = item.IDSumula })">
                                            <img src="~/Imagens/table_icon/table_icon_search.png" />
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, IDCampeonato = ViewBag.IDCampeonato }))
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

