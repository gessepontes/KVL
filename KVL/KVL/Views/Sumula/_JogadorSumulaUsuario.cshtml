@model KVL.Models.JogadorSumulaGolCartao
@using KVL.Models

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Jogador Súmula</h3>

                    <div class="modal-body">

                        @using (Html.BeginForm("JogadorSumula", "Sumula", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            @Html.Hidden("IDJogadorSumula", Model.IDJogadorSumula)
                            @Html.Hidden("IDSumula", Model.IDSumula)

                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.Label("Jogador", htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.sNome, new { htmlAttributes = new { @class = "form-control", style = "width:75%", @disabled = "disabled" } })
                                </div>

                                <div class="form-group">
                                    @Html.Label("Cartão", htmlAttributes: new { @class = "control-label col-md-2" })

                                    @Html.DropDownListFor(model => model.iCartao,
                  new SelectList(Enum.GetValues(typeof(TipoCartao))),
                  new { @class = "form-control", style = "width:200px", @disabled = "disabled" })

                                </div>

                                <div class="form-group">
                                    @Html.Label("Gols", htmlAttributes: new { @class = "control-label col-md-2" })

                                    @Html.DropDownListFor(model => model.iGol,
                  new SelectList(ViewBag.QuantidadeGols),
                  new { @class = "form-control", style = "width:100px", @disabled = "disabled" })
                                </div>
                            </div>

                            <div class="box-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Voltar</button>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
