@model KVL.Models.Time
@using KVL.Models

@{
    ViewBag.Title = "Detalhes do Pérfil";
}

<section class="content-header">
    <h1>
        Perfil do Usuário
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Pérfil</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->

            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Pessoa</h3>
                        <hr />
                        @using (Html.BeginForm("PessoaTime", "Pessoa", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            @Html.HiddenFor(model => model.Pessoa.IDPessoa, "IDPessoa")

                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Pessoa.sNome, htmlAttributes: new { @class = "control-label col-md-3" })

                                    @Html.EditorFor(model => model.Pessoa.sNome, new { htmlAttributes = new { @class = "form-control text-uppercase", style = "width:300px", @disabled = "disabled" } })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Pessoa.sEmail, htmlAttributes: new { @class = "control-label col-md-3" })

                                    @Html.EditorFor(model => model.Pessoa.sEmail, new { htmlAttributes = new { @class = "form-control", style = "width:300px", @disabled = "disabled" } })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Pessoa.dDataNascimento, htmlAttributes: new { @class = "control-label col-md-3" })

                                    @Html.EditorFor(model => model.Pessoa.dDataNascimento, new { htmlAttributes = new { @class = "form-control", style = "width:200px", @disabled = "disabled" } })

                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Pessoa.sTelefone, htmlAttributes: new { @class = "control-label col-md-3" })

                                    @Html.EditorFor(model => model.Pessoa.sTelefone, new { htmlAttributes = new { @class = "form-control", style = "width:150px", mask = "(99) 9999-9999" } })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Pessoa.sCpf, htmlAttributes: new { @class = "control-label col-md-3" })

                                    @Html.EditorFor(model => model.Pessoa.sCpf, new { htmlAttributes = new { @class = "form-control", style = "width:150px", mask = "999.999.999-99", @disabled = "disabled" } })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Pessoa.sRg, htmlAttributes: new { @class = "control-label col-md-3" })

                                    @Html.EditorFor(model => model.Pessoa.sRg, new { htmlAttributes = new { @class = "form-control", style = "width:150px", mask = "999999999", @disabled = "disabled" } })
                                </div>

                                <div class="form-group">
                                    <input type="file" id="Avatar" name="upload" class="col-md-6" />
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Pessoa.sFoto, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <img width="100" height="100" src="@string.Format("../../imagens/foto/" + @Model.Pessoa.sFoto, @Model.Pessoa.sFoto)" class="img-circle col-md-3" alt="@Model.Pessoa.sFoto" />
                                </div>

                                <div class="box-footer">
                                    <input type="submit" value="Atualizar Pessoa" class="btn btn-primary" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Time</h3>
                        <div class="form-horizontal">
                            <hr />
                            @using (Html.BeginForm("PessoaTime", "Time", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.HiddenFor(model => model.IDTime, "IDTime")
                                <div class="form-group">
                                    @Html.LabelFor(model => model.sNome, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.sNome, new { htmlAttributes = new { @class = "form-control text-uppercase", @disabled = "disabled" } })
                                        @Html.ValidationMessageFor(model => model.sNome, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.sObservacao, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextArea("sObservacao", null, 10, 0, new { @id = "sObservacao", @title = "sObservacao", @class = "text-uppercase", style = "width:100%; float:left" })
                                        @Html.ValidationMessageFor(model => model.sObservacao, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-10">
                                        <input type="file" id="Avatar" name="upload" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.sSimbolo, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <img width="100" height="100" src="@string.Format("../../imagens/simbolo/" + @Model.sSimbolo, @Model.sSimbolo)" alt="@Model.sSimbolo" />
                                </div>

                                <div class="box-footer">
                                    <input type="submit" value="Atualizar Time" class="btn btn-primary" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12">

            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">

                        <h3 class="box-title">Jogadores</h3>
                        <hr />
                        <table class="table table-striped table-bordered table-hover">
                            <thead>

                                <tr>
                                    <th>
                                        Nome
                                    </th>
                                    <th>
                                        Posição
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Jogador item in ViewBag.Jogadores)
                                {
                                    <tr id="tr">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pessoa.sNome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Posicao.sDescricao)
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">

                        <h3 class="box-title">Horário Disponivel</h3>
                        <hr />

                        <p>
                            <a href="@Url.Action("CreateTime", "HorarioDisponivel")">Novo Horário</a>
                        </p>


                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Campo
                                    </th>
                                    <th>
                                        Dia da Semana
                                    </th>
                                    <th>
                                        Hora
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (HorarioDisponivel item in ViewBag.HorarioDisponivel)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Campo.sNome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.iDiaSemana)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.sHora)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("DeleteTime", "HorarioDisponivel",new { id = item.IDHorario })">
                                                <img src="~/Imagens/table_icon/table_icon_trash.png" />
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>